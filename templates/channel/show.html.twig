{% extends 'base.html.twig' %}

{% block title %}Channel{% endblock %}

{% block body %}
    <h1>{{ channel.Title }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Content</th>
                <th>Created_at</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.UserId }}</td>
                <td>{{ message.Content }}</td>
                <td>{{ message.CreatedAt ? message.CreatedAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_channel_index') }}">back to list</a>
    <a href="{{ path('app_message_new') }}">Add a message</a>

    {{ include('channel/_delete_form.html.twig') }}
{% endblock %}
