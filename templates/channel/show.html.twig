{% extends 'base.html.twig' %}

{% block title %}Channel{% endblock %}

{% block body %}
    <div class="container">
      <div class="sideblock right-shadow">
        <h1>Channel index</h1>
        <ul>
          {% for channel in channels %}
            <li>
              <a href="{{ path('app_channel_show', {'id': channel.id}) }}">#{{ channel.Title }}</a>
            </li>
          {% else %}
              <li>no records found</li>
          {% endfor %}
        </ul>
        <a href="{{ path('app_channel_new') }}">Create new</a>
      </div>
      <div class="central-block">
        <h1>#{{ channel.Title }}</h1>
          <ul>
            {% for message in messages %}
                <li>
                  <div class= "msg-box">
                    <div class="msg-title">
                      {{ message.UserId }} {{ message.CreatedAt ? message.CreatedAt|date('Y-m-d H:i') : '' }}
                    </div>
                    <div class= "msg-content">
                      {{ message.Content }}
                    </div>
                  </div>
                </li>
            {% else %}
                <li> no records found </li>
            {% endfor %}
          </ul>

        <a href="{{ path('app_channel_index') }}">back to list</a>
        <a href="{{ path('app_message_new') }}">Add a message</a>
      </div>
      <div class="sideblock left-shadow">
      <h1>Look who's here!</h1>
        <ul>
          {% for user in users %}
            <a href="{{ path('app_message_new') }}"> {{user.nickname}}</a>
          {% else %}
            <li>No records found</li>
          {% endfor %}
        </ul>
    </div>
    </div>
{% endblock %}
